<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?android:colorControlHighlight">

    <!-- Note: <ripple> acts like a layer-list -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <!-- This color is not displayed in any way -->
            <solid android:color="@android:color/black" />
            <corners
                android:bottomLeftRadius="@dimen/timer_list_fragment_button_switcher_button_corner"
                android:bottomRightRadius="@dimen/timer_list_fragment_button_switcher_button_corner"
                android:topLeftRadius="@dimen/timer_list_fragment_button_switcher_button_corner"
                android:topRightRadius="@dimen/timer_list_fragment_button_switcher_button_corner" />
        </shape>
    </item>

    <!-- This is the border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F00078" />
            <corners
                android:bottomLeftRadius="@dimen/timer_list_fragment_button_switcher_button_corner"
                android:bottomRightRadius="@dimen/timer_list_fragment_button_switcher_button_corner"
                android:topLeftRadius="@dimen/timer_list_fragment_button_switcher_button_corner"
                android:topRightRadius="@dimen/timer_list_fragment_button_switcher_button_corner" />
        </shape>
    </item>
</ripple>