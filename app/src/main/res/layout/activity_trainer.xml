<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="yhh.bj4.trainer.TrainerActivity">

    <yhh.bj4.trainer.TrainerActivityTabLayout
        android:id="@+id/top_tab_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/trainer_activity_top_tab_container_height"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/trainer_activity_top_tab_container_padding_bottom">

        <ImageView
            android:id="@+id/pager_schedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/trainer_activity_top_tab_item_margin"
            android:scaleType="centerInside"
            android:src="@drawable/ic_walk_black_48dp" />

        <ImageView
            android:id="@+id/pager_calendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/trainer_activity_top_tab_item_margin"
            android:scaleType="centerInside"
            android:src="@drawable/ic_calendar_black_48dp" />

        <ImageView
            android:id="@+id/pager_timer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="@dimen/trainer_activity_top_tab_item_margin"
            android:scaleType="centerInside"
            android:src="@drawable/ic_clock_fast_black_48dp" />
    </yhh.bj4.trainer.TrainerActivityTabLayout>


    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_tab_container"></android.support.v4.view.ViewPager>
</RelativeLayout>
